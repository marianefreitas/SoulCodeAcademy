<%- include ("../partials/header"); %>

<title>Cadastro Livros</title>
</head>
<body>
<section class="container">
    <div class="row mt-5">
        <div class="col-6">
            <h1>Cadastrar Livros</h1>
        </div>
        <div class="col-6 text-right">
            <a href="/biblioteca/listandoLivros" class="btn btn-primary my-3 text-center">Lista de Livros</a>
        </div>
    </div>

    <form id="formulario" action="/biblioteca/cadastrandoLivros" method="POST">

        <div class="form-group">
            <label for="titulo">Título:</label>
            <input class="form-control" type="text" id="titulo" name="titulo"  required>
        </div>
        <div class="form-group">
            <label for="idade">Autor:</label>
            <input class="form-control" type="text" id="autor" name="autor"  required>
        </div>
        <div class="form-group">
            <label for="genero">Genero:</label>
            <select class=" custom-select form-control" id="genero" name="genero" required>
                <option class="d-none" value="">Escolha</option>
                <option value="fantasia">Fantasia</option>
                <option value="literatura">Literatura</option>
            </select>
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select class=" custom-select form-control" id="status" name="status" required>
                <option class="d-none" value="">Escolha</option>
                <option value="emprestado">Emprestado</option>
                <option value="disponivel">Disponível</option>
            </select>
        </div>

        <button class="btn btn-success" type="submit">Salvar</button>
    </form>

</section>

<%- include ("../partials/footer"); %>